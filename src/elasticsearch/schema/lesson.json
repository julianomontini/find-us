//PUT lesson
{
    "settings": {
        "analysis": {
            "filter": {
                "brazilian_stop": {
                    "type": "stop",
                    "stopwords": "_brazilian_"
                },
                "brazilian_stemmer": {
                    "type": "stemmer",
                    "language": "brazilian"
                }
            },
            "analyzer": {
                "brazilian": {
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "brazilian_stop",
                        "brazilian_stemmer"
                    ]
                }
            }
        }
    },
    "mappings": {
        "_doc": {
            "properties": {
                "startTime": {
                    "type": "date"
                },
                "endTime": {
                    "type": "date"
                },
                "location": {
                    "type": "geo_point"
                },
                "title": {
                    "type": "text",
                    "analyzer": "brazilian"
                },
                "description": {
                    "type": "text",
                    "analyzer": "brazilian"
                },
                "tags": {
                    "type": "text",
                    "analyzer": "brazilian"
                },
                "price": {
                    "type": "float"
                }
            }
        }
    }
}