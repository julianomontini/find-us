//PUT customer
{
  
  "mappings": {
    "_doc": {
      "properties": {
        "location": {
          "type": "geo_point"
        },
        "tags": {
          "type": "nested",
          "properties": {
            "name": {
              "type": "text",
              "analyzer": "autocomplete"
            }
          }
        }
      }
    }
  },
  "settings": {
    "analysis": {
      "filter": {
        "brazilian_stop": {
          "type":       "stop",
          "stopwords":  "_brazilian_" 
        },
        "brazilian_stemmer": {
          "type":       "stemmer",
          "language":   "brazilian"
        },
        "autocomplete_filter": { 
          "type":     "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "brazilian": {
          "tokenizer":  "standard",
          "filter": [
            "lowercase",
            "brazilian_stop",
            "brazilian_stemmer"
          ]
        },
        "autocomplete": {
          "type":      "custom",
          "tokenizer": "standard",
          "filter": [
              "lowercase",
              "autocomplete_filter" 
          ]
        }
      }
    }
  }
}